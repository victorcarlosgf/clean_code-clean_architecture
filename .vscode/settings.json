{
  "files.eol": "\n",
  "editor.tabSize": 2,
  "editor.formatOnSave": true,
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": true
  },
  "javascript.format.enable": true,
  "files.trimTrailingWhitespace": true,
  "typescript.format.enable": true,
  "typescript.validate.enable": true,
  "eslint.enable": true,
  "files.exclude": {
    "**/dist": true,
    "**/node_modules": true,
    "**/.husky": true
  }
}