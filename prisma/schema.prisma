// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Customer {
  id        String   @id @default(uuid())
  name      String
  document  String
  email     String
  createdAt DateTime @default(now())

  order Order[]
}

model Product {
  id          String   @id @default(uuid())
  name        String
  description String
  value       Int
  currency    String
  width       Int
  height      Int
  length      Int
  weight      Int
  createdAt   DateTime @default(now())

  item OrderItem[]
}

model OrderItem {
  id        String @id @default(uuid())
  orderId   String
  productId String
  quantity  Int
  total     Int

  order   Order   @relation(fields: [orderId], references: [id])
  product Product @relation(fields: [productId], references: [id])
}

model Order {
  id         String      @id @default(uuid())
  code       String
  customerId String
  freightId  String?
  couponId   String?
  total      Int
  orderItem  OrderItem[]

  customer Customer @relation(fields: [customerId], references: [id])
  freight  Freight? @relation(fields: [freightId], references: [id])
  coupon   Coupon?  @relation(fields: [couponId], references: [id])
}

model Freight {
  id        String   @id @default(uuid())
  distance  Int
  volume    Int
  density   Int
  value     Int
  createdAt DateTime @default(now())

  Order Order[]
}

model Coupon {
  id          String   @id @default(uuid())
  code        String
  percentage  Int
  expire_date DateTime

  order Order[]
}

model Zipcode {
  code         String @id
  street       String
  neighborhood String
  lat          Int
  long         Int
}
